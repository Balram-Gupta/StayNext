<% layout('layouts/boilerplate') -%>

<body>
   
        <div class="row mt-3">
            <div class="col-8 offset-2">
                <h3>Create a new list</h3>
                <form method="POST" action="/listing"  novalidate class="needs-validation" enctype="multipart/form-data" >
                     
                  <div class="mb-3">
                     <label for="title" class="form-label">Title</label>
                     <input type="text" name="listing[title]" class="form-control" required>
                     <div class="valid-feedback">title looks good</div>
                    </div>

         <div class="mb-2">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" class="form-control" required> </textarea>
            <div class="invalid-feedback">Description should be less than 50 words</div>
         </div>

         <div class="mb-2">
            <label for="image" class="form-label">image</label>
            <input type="file" name="listing[image]" placeholder="upload listing image" class="form-control" required>
            <div class="invalid-feedback">
               Please upload a valid image.
             </div>
         </div>

         <div class="row">
            <div class="mb-2 col-md-4" >
                <label for="price" class="form-label">Price</label>
                <input name="listing[price]" placeholder="Enter Price" class="form-control" required>
                <div class="invalid-feedback">
                  Please provide a valid price.
                </div>
             </div>
             <div class="mb-2 col-md-8">
                <label for="country" class="form-label">Country</label>
                <input type="text" name="listing[country]" placeholder="Enter country" class="form-control" required>
                <div class="invalid-feedback">
                  Please provide a valid country.
                </div>
             </div>
         </div>

         <div class="mb-2">
            <label for="location" class="form-label">Location</label>
            <input type="text" name="listing[location]" placeholder="Enter location" class="form-control" required>
            <div class="invalid-feedback">
               Please provide a location zip.
             </div>
         </div>

        
        <button class="btn btn-dark add-btn mt-2">Add</button>
        <br>
    </form>

</div>
</div>
</body>
